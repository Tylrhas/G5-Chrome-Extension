{
  "manifest_version": 2,

  "name": "WCS Functions",
  "description": "Future home of Bookmarklets for the G5 WCS Team",
  "version": "1.1",

  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-scripts.js"]
    }
  ],
  "permissions": [
    "tabs", "<all_urls>","storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },

  "web_accessible_resources": ["scripts/wysiwyg-script.js"]
}
