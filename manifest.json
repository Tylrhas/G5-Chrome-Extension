{
  "manifest_version": 2,

  "name": "G5 Bookmarklets",
  "description": "Home of Bookmarklets for the G5 WCS Team",
  "version": "1.4",

  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-scripts.js"]
    }
  ],
  "permissions": [
    "tabs", "<all_urls>","storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "scripts/wysiwyg-script.js",
    "functions/open_hub.js"
  ],
  "commands": {
    "wysiwyg": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Execute WYSIWYG function"
    },
    "search": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Execute Hub Search function"
    },
    "HubPOI": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Execute Hub Points of Interest function"
    },
    "sidekiq": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open Sidekiq to Live Poll"
    }
  }
}
