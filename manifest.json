{
  "manifest_version": 2,

  "name": "G5 Bookmarklets",
  "description": "Home of Bookmarklets for the G5 WIS Team",
  "version": "2.0",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-scripts.js"]
    }
  ],
  "permissions": [
    "tabs", "<all_urls>","storage", "webRequest", "webNavigation", "downloads"
  ],

  "browser_action": {
    "default_icon": "icon_new_logo.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "js/injected_scripts/wysiwyg-script.js", 
    "js/injected_scripts/changelog-check.js"
  ]
}
